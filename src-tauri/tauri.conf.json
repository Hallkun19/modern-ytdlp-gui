{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Modern Downloader",
  "version": "1.0.1",
  "identifier": "com.moderndl.halkun19.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Modern Downloader",
        "width": 900,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "schemes": [
        "modern-dl"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "externalBin": [
      "bin/yt-dlp",
      "bin/ffmpeg",
      "bin/ffprobe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
